{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "outDir": "dist",
    "rootDir": "src",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "experimentalDecorators": true,
    "useDefineForClassFields": false,

    "types": ["node"],
    "verbatimModuleSyntax": true
  },
  "include": ["src"]
}
